* 
  margin 0px 
  padding 0 

html 
  background  #111
  height 100%
  overflow hidden
  background-image radial-gradient(rgba($gradient1,.85),rgba($gradient2,.05))
  background-size cover

nav 
  fixed 100%

.star
  color rgb(156,255,0)

li
  wh 50px 50px
  display inline-block
  transition all .3s 
  &:hover 
    cursor pointer
    border-radius 50%
    background-color $hover 

.github 
  background-color transparent
  background-image url("../img/git.png")
  background-repeat no-repeat
  background-position 50% 50%
  background-size cover
  float right

.twitter 
  background-image url("../img/bird.png")
  background-repeat no-repeat
  background-position center center
  background-size cover
  float left

.discuss 
  background-image url("../img/talk.png")
  background-repeat no-repeat
  background-position center center
  background-size cover
  float left 
.nfo 
  background-image url("../img/nfo.png")
  background-repeat no-repeat
  background-position center center
  background-size cover
  fixed bottom 0px left 50%
  margin-left -25px 
  
.option
  margin-top 30px
  text-align center
  color cyan
  font-size .7em

.usage 
  color transparent
  background-size cover
  absolute left 50%
  margin-left -25px
  z-index 1000

.how
  z-index 1000
  color transparent
  fixed top 75px left 50%

pre
  background black

.footer
  wh 100% 175px
  background #333
  fixed bottom -175px
  transition all .3s
  border-top 1px solid rgba(0,0,0,.25)

.footer p
  text-align center
  font-size .8em

li.info
  display inline-block
  width 140px
  border-left 1px solid cyan
  border-right 1px solid cyan

.desc
  padding-top 30px
  width 580px
  margin 0 auto
  font-family Manksans, serif
  color salmon
  text-shadow 0 1px 0px rgba(0,0,0,.5)
  font-size 1.25em

.arrow 
  width 0
  height 0
  border 19px solid
  margin-left 6px
  border-top-color black
  transition all .3s
  margin-top 18px
  
.reveal
  display none
  relative right 50%

.talk 
  transition all .5s
  z-index 1000
  background rgba(255, 255, 255, 0.8)
  fixed top 0px left -500px
  wh 400px 100%
  padding 0px 50px 50px 50px

#disqus_thread 
  wh 400px 100%
  padding-bottom 100px
  overflow-y auto 

.close 
  margin 10px
  wh 50px 50px
  display inline-block
  opacity .35
  transition all .3s
  background url("../img/close.png") no-repeat center center
  background-size cover
  float right
  relative top 0px right -50px 
  &:hover 
    opacity 1
    cursor pointer

.container 
  wh 100% 100% 

.mCustomScrollBox 
  width 430px 
  
.twitbot
  margin-top 10px
  margin-left 250px